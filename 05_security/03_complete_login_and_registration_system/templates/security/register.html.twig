{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
        <section class="row h-100">
            <div id="message" class="w-100 p-3 position-absolute d-none" style="left:0px;">
                <div class="col-sm-6  mx-auto">
                    <div  class="alert alert-success" role="alert">
                        <span id="letter" class="invalid">
                            <i class="fa fa-times"></i>
                            A <b>lowercase</b> letter
                        </span><br>
                        <span id="capital" class="invalid">
                            <i class="fa fa-times"></i>
                            A <b>capital (uppercase)</b> letter
                        </span><br>
                        <span id="number" class="invalid">
                            <i class="fa fa-times"></i>
                            A <b>number</b></span><br>
                        <span id="length" class="invalid">
                            <i class="fa fa-times"></i>
                            Minimum <b>8 characters</b></span><br>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 my-auto">
                <div class="col-md-6 col-sm-8 mx-auto">
                    <div class="card border-none">
                        <div class="card-body">
                            <div class="mt-2 text-center">
                                <h2>Create Your Account</h2>
                            </div>
                            <p class="mt-4 text-gray lead text-center">
                                Sign up to get started with Authority
                            </p>
                            <div class="mt-4">
                                {{ form_start(form) }}
                                    <div class="form-group">
                                        {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder' : 'Enter your UserName'} }) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder' : 'Enter email address'} }) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder' : 'Enter password'} }) }}
                                    </div> 
                                    <div class="form-group">
                                        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder' : 'Confirm password'} }) }}
                                    </div> 
                                    <div class="form-group">
                                        <div class="d-inline">                                                                   
                                            {{ form_widget(form.termsAccepted) }} Accept terms.
                                        </div>
                                        <div class="d-inline float-right">
                                            <input class="" type="checkbox" id="show_password"> Show password.
                                        </div>
                                    </div>
                                    {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-primary btn-block'} }) }}
                                {{ form_end(form) }}
                                <p class="text-center">
                                    Already have an account? <a href="{{ path('user_login')}}">Login Now</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-sm-12 mt-5 footer">
                        <p class="text-gray small text-center">
                            &copy; 2018 Login/Register Forms. A FREE Symfony 4 and Bootstrap 4 component.
                        </p>
                    </div>
                </div>
            </div>
        </section>    
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('build/js/app_security_forms.js') }}"></script>        
{% endblock %}
